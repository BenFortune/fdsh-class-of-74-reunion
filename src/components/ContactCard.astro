---
interface Props {
    name: string
    email: string
}

const {name, email} = Astro.props
---

<section>
    <div class="member-info">
        <img class="member-avatar" alt="contact avatar image" src="./fd-avatar.svg" width="48" height="48">
        <h3>{name}</h3>
    </div>
    <div class="member-contact">
        Email Address:
        <p>
            <a href={`mailto:${email}`}>{email}</a>
        </p>
    </div>
</section>

<style>
    section {
        display: block;
        width: 48%;
        margin-right: 12px;
        margin-bottom: 12px;
        padding: 24px;
        border: 1px solid #999;
        border-radius: 8px;
    }

    section:nth-child(2) {
        margin-right: 0;
    }

    h3 {
        font-size: 20px;
    }

    .member-info {
        display: flex;
        align-items: center;
        line-height: 1;
    }

    .member-contact {
        margin-top: 12px;
    }

    .member-contact p {
        margin: 0;
    }

    .member-avatar {
        margin-right: 12px
    }

</style>